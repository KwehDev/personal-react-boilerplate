{
  "name": "personal-react-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "node scripts/spawn-dev-env.js",
    "install": "cd client && yarn && cd ../server && yarn",
    "purge": "npm-run-all --parallel purge:* && rimraf yarn.lock && rimraf node_modules",
    "purge:client": "rimraf client/node_modules && rimraf client/yarn.lock",
    "purge:server": "rimraf server/node_modules && rimraf server/yarn.lock"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ljosberinn/personal-react-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ljosberinn/personal-react-boilerplate/issues"
  },
  "homepage": "https://github.com/ljosberinn/personal-react-boilerplate#readme",
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react-scripts": "^3.4.1",
    "rimraf": "^3.0.2",
    "terminal-tab": "^0.0.7",
    "typescript": "^3.9.0-dev.20200411"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "import/order": [
        "error",
        {
          "groups": [
            [
              "builtin",
              "external",
              "internal"
            ],
            [
              "unknown",
              "parent",
              "sibling"
            ],
            "index"
          ],
          "alphabetize": {
            "order": "asc"
          },
          "newlines-between": "always"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write",
    "*.js": "eslint --fix"
  }
}
